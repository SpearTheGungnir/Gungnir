			function logout() {
				var xmlhttp = new XMLHttpRequest();
				xmlhttp.open('GET', '/users/logout', true);
				xmlhttp.send();
				window.location.href = '/';
			}
		</script>
  </head>
  <body>
		<p>Hi! <%= username %><button type='button' onclick='logout()'>注销</button></p>
		<% if (usertype) { %>
			<a href='/manager/homepage/restaurant'>管理餐厅</a>
		<% } %>
		<% if (usertype === 2) {%>
			<br/><a href='/manager/homepage/sudo/users/list0'>用户管理</a>
			<br/><a href='/manager/homepage/sudo/restaurants/list0'>餐厅管理</a>
